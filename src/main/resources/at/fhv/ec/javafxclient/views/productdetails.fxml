<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.controller.ProductDetailsController">
   <children>
      <fx:include source="sidebar.fxml" />
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox styleClass="header">
               <children>
                  <Label fx:id="nameLabel" styleClass="h1" text="Label" textFill="WHITE">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Label>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button graphicTextGap="10.0" mnemonicParsing="false" onAction="#onShoppingCartButtonClicked" styleClass="btn" text="Shopping Cart">
                     <graphic>
                        <FontAwesomeIconView glyphName="SHOPPING_CART" size="20" />
                     </graphic></Button>
                  <Button mnemonicParsing="false" onAction="#onBackButtonClicked" styleClass="btn" text="Back" />
               </children>
            </HBox>
            <VBox spacing="30.0" styleClass="content" VBox.vgrow="ALWAYS">
               <children>
                  <HBox VBox.vgrow="ALWAYS">
                     <children>
                        <VBox spacing="15.0">
                           <children>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label styleClass="h2" text="Artist: " HBox.hgrow="ALWAYS" />
                                    <Label fx:id="artistNameLabel" styleClass="p" text="Label" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label styleClass="h2" text="Release Year: " HBox.hgrow="ALWAYS" />
                                    <Label fx:id="releaseYearLabel" styleClass="p" text="Label" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label styleClass="h2" text="Label: " HBox.hgrow="ALWAYS" />
                                    <Label fx:id="labelNameLabel" styleClass="p" text="Label" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label styleClass="h2" text="Genre: " HBox.hgrow="ALWAYS" />
                                    <Label fx:id="genreLabel" styleClass="p" text="Label" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER_LEFT">
                                 <children>
                                    <Label styleClass="h2" text="Duration: " HBox.hgrow="ALWAYS" />
                                    <Label fx:id="durationLabel" styleClass="p" text="Label" HBox.hgrow="ALWAYS" />
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                        <Pane HBox.hgrow="ALWAYS" />
                        <TableView fx:id="songsTable" HBox.hgrow="ALWAYS">
                          <columns>
                             <TableColumn fx:id="durationColumn" prefWidth="318.0" text="Duration">
                                <cellValueFactory>
                                   <PropertyValueFactory property="duration" />
                                </cellValueFactory>
                             </TableColumn>
                             <TableColumn fx:id="titleColumn" prefWidth="318.0" text="Title">
                                <cellValueFactory>
                                   <PropertyValueFactory property="title" />
                                </cellValueFactory>
                             </TableColumn>
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </HBox>
                  <TableView fx:id="soundCarrierTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="soundCarrierNameColumn" maxWidth="200" minWidth="20" prefWidth="50" text="Type">
                           <cellValueFactory>
                              <PropertyValueFactory property="soundCarrierName" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="amountAvailableColumn" maxWidth="150" minWidth="50.0" prefWidth="50" text="In stock">
                           <cellValueFactory>
                              <PropertyValueFactory property="amountAvailable" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="pricePerCarrierColumn" maxWidth="150" minWidth="20" prefWidth="100.0" text="Price per carrier">
                           <cellValueFactory>
                              <PropertyValueFactory property="pricePerCarrier" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="spinnerColumn" maxWidth="200" minWidth="75.0" prefWidth="100.0" text="Selected Amount">
                  </TableColumn>
                        <TableColumn fx:id="addToCartColumn" maxWidth="150.0" minWidth="50" prefWidth="120" text="Action">
                  </TableColumn>
                        <TableColumn fx:id="orderButtonColumn" maxWidth="400" minWidth="30" prefWidth="100" text="">
                           <cellValueFactory>
                              <PropertyValueFactory property="amountAvailable" />
                           </cellValueFactory>
                        </TableColumn>
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
