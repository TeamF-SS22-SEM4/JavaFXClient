<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.CheckoutController">
   <children>
      <VBox fx:id="menu" maxWidth="300.0" minWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <Pane maxHeight="100.0" minHeight="100.0">
               <children>
                  <Button layoutX="75.0" layoutY="38.0" mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back" />
               </children></Pane>
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" text="Search" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" text="Search" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox fx:id="headbar" alignment="CENTER_LEFT" maxHeight="100.0" minHeight="50.0" style="-fx-background-color: #616161;" VBox.vgrow="ALWAYS">
               <children>
                  <Pane prefHeight="100.0" prefWidth="638.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Text fill="WHITE" layoutX="315.0" layoutY="63.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Checkout">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Text>
                     </children></Pane>
               </children>
            </HBox>
            <TableView fx:id="shoppingCartTable" prefHeight="285.0" prefWidth="819.0">
              <columns>
                 <TableColumn fx:id="productNameColumn" prefWidth="96.0" text="Product">
                    <cellValueFactory>
                       <PropertyValueFactory property="productName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="artistNameColumn" prefWidth="81.0" text="Artist">
                    <cellValueFactory>
                       <PropertyValueFactory property="artistName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="carrierNameColumn" prefWidth="135.0" text="Sound Carrier">
                    <cellValueFactory>
                       <PropertyValueFactory property="soundCarrierName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="selectedAmountColumn" prefWidth="137.0" text="Selected Amount">
                    <cellValueFactory>
                       <PropertyValueFactory property="selectedAmount" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="pricePerCarrierColumn" prefWidth="173.0" text="Price per carrier">
                    <cellValueFactory>
                       <PropertyValueFactory property="pricePerCarrier" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="totalProductPriceColumn" prefWidth="97.0" text="Total">
                    <cellValueFactory>
                       <PropertyValueFactory property="totalProductPrice" />
                    </cellValueFactory>
                 </TableColumn>
              </columns>
            </TableView>
            <Pane prefHeight="215.0" prefWidth="638.0">
               <children>
                  <Text layoutX="524.0" layoutY="51.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Price:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <Label fx:id="totalPriceLabel" layoutX="644.0" layoutY="35.0" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Text layoutX="14.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Payment method" />
                  <RadioButton fx:id="cashRadioButton" layoutX="18.0" layoutY="36.0" mnemonicParsing="false" text="Cash" />
                  <RadioButton fx:id="creditCardRadioButton" layoutX="18.0" layoutY="63.0" mnemonicParsing="false" text="Credit Card" />
                  <RadioButton fx:id="invoiceRadioButton" layoutX="18.0" layoutY="90.0" mnemonicParsing="false" text="Invoice" />
                  <Button onAction="#onPayButtonClicked" layoutX="22.0" layoutY="124.0" mnemonicParsing="false" text="Pay" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</HBox>
