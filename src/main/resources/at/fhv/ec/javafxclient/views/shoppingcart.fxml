<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.controller.ShoppingCartController">
   <children>
      <fx:include source="sidebar.fxml" />
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" styleClass="header">
               <children>
                  <Label styleClass="h1" text="Shopping cart" />
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#onBackButtonClicked" styleClass="btn" text="Back" />
               </children>
            </HBox>
            <VBox styleClass="content" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="shoppingCartTable" prefHeight="285.0" prefWidth="635.0">
                     <columns>
                        <TableColumn fx:id="productNameColumn" prefWidth="96.0" text="Product">
                           <cellValueFactory>
                              <PropertyValueFactory property="productName" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="artistNameColumn" prefWidth="81.0" text="Artist">
                           <cellValueFactory>
                              <PropertyValueFactory property="artistName" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="carrierNameColumn" prefWidth="135.0" text="Sound Carrier">
                           <cellValueFactory>
                              <PropertyValueFactory property="soundCarrierName" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="pricePerCarrierColumn" prefWidth="110.0" text="Price per Carrier">
                           <cellValueFactory>
                              <PropertyValueFactory property="pricePerCarrier" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="selectedAmountColumn" prefWidth="137.0" text="Selected Amount">
                        </TableColumn>
                        <TableColumn fx:id="actionColumn" prefWidth="110.0" text="Action">
                        </TableColumn>
                     </columns>
                  </TableView>
                  <Pane prefHeight="215.0" prefWidth="638.0">
                     <children>
                        <Label fx:id="totalPriceLabel" layoutX="660.0" layoutY="35.0" styleClass="p" text="Label">
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Label>
                        <Button layoutX="533.0" layoutY="71.0" mnemonicParsing="false" onAction="#onCheckoutButtonClicked" text="Check out" />
                        <Button layoutX="626.0" layoutY="71.0" mnemonicParsing="false" onAction="#onClearCartButtonClicked" text="Clear cart" />
                        <Label layoutX="533.0" layoutY="36.0" styleClass="h2" text="Total Price:" />
                     </children>
                  </Pane>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
