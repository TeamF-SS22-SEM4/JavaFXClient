<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox minHeight="600.0" minWidth="800.0" prefHeight="748.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.controller.CheckoutController">
   <children>
      <fx:include source="sidebar.fxml"/>
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="100.0" minHeight="50.0" styleClass="header" VBox.vgrow="ALWAYS">
               <children>
                  <Pane prefHeight="100.0" prefWidth="638.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Text fill="WHITE" layoutY="50.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Checkout">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Text>
                        <Button layoutX="761.0" layoutY="26.0" mnemonicParsing="false" onAction="#onBackButtonClicked" styleClass="button" text="Back" />
                     </children></Pane>
               </children>
            </HBox>
            <TableView fx:id="shoppingCartTable" prefHeight="285.0" prefWidth="819.0">
              <columns>
                 <TableColumn fx:id="productNameColumn" prefWidth="96.0" text="Product">
                    <cellValueFactory>
                       <PropertyValueFactory property="productName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="artistNameColumn" prefWidth="81.0" text="Artist">
                    <cellValueFactory>
                       <PropertyValueFactory property="artistName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="carrierNameColumn" prefWidth="135.0" text="Sound Carrier">
                    <cellValueFactory>
                       <PropertyValueFactory property="soundCarrierName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="selectedAmountColumn" prefWidth="137.0" text="Selected Amount">
                    <cellValueFactory>
                       <PropertyValueFactory property="selectedAmount" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="pricePerCarrierColumn" prefWidth="173.0" text="Price per carrier">
                    <cellValueFactory>
                       <PropertyValueFactory property="pricePerCarrier" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="totalProductPriceColumn" prefWidth="97.0" text="Total">
                    <cellValueFactory>
                       <PropertyValueFactory property="totalProductPrice" />
                    </cellValueFactory>
                 </TableColumn>
              </columns>
            </TableView>
            <Pane prefHeight="364.0" prefWidth="800.0">
               <children>
                  <Text layoutX="524.0" layoutY="51.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Price:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <Label fx:id="totalPriceLabel" layoutX="644.0" layoutY="35.0" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Text layoutX="11.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Payment method" />
                  <RadioButton fx:id="cashRadioButton" layoutX="18.0" layoutY="37.0" mnemonicParsing="false" text="Cash" />
                  <RadioButton fx:id="creditCardRadioButton" layoutX="18.0" layoutY="62.0" mnemonicParsing="false" text="Credit Card" />
                  <RadioButton fx:id="invoiceRadioButton" layoutX="18.0" layoutY="87.0" mnemonicParsing="false" text="Invoice" />
                  <Button layoutX="15.0" layoutY="117.0" mnemonicParsing="false" onAction="#onPayButtonClicked" text="Pay" />
                  <Text layoutX="257.0" layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Customer Information:" />
                  <Label fx:id="customerNameLabel" layoutX="256.0" layoutY="37.0" text="Label" />
                  <Label fx:id="customerAddressLabel" layoutX="256.0" layoutY="63.0" text="Label" />
                  <Label fx:id="customerMailAndPhoneLabel" layoutX="256.0" layoutY="88.0" text="Label" />
                  <Button layoutX="67.0" layoutY="117.0" mnemonicParsing="false" onAction="#onSelectCustomerButtonClicked" text="Select customer" />
                  <Button fx:id="removeCustomerButton" layoutX="67.0" layoutY="157.0" mnemonicParsing="false" onAction="#onRemoveCustomerButtonClicked" text="Remove Customer" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</HBox>
