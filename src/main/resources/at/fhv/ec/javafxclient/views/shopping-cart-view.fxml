<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox minHeight="600.0" minWidth="800.0" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.ShoppingCartController">
   <children>
      <VBox maxWidth="300.0" minWidth="200.0" styleClass="sidebar" HBox.hgrow="ALWAYS">
         <children>
            <Pane fx:id="sidebar" maxHeight="100.0" minHeight="100.0" />
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" styleClass="btn" text="Shop" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" text="Customers" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" text="Exchange">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="100.0" minHeight="50.0" styleClass="header" VBox.vgrow="ALWAYS">
               <children>
                  <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Shopping Cart">
                     <font>
                        <Font size="36.0" />
                     </font>
                  </Text>
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back" />
               </children>
            </HBox>
            <TableView fx:id="shoppingCartTable" prefHeight="285.0" prefWidth="635.0">
              <columns>
                 <TableColumn fx:id="productNameColumn" prefWidth="96.0" text="Product">
                    <cellValueFactory>
                       <PropertyValueFactory property="productName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="artistNameColumn" prefWidth="81.0" text="Artist">
                    <cellValueFactory>
                       <PropertyValueFactory property="artistName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="carrierNameColumn" prefWidth="135.0" text="Sound Carrier">
                    <cellValueFactory>
                       <PropertyValueFactory property="soundCarrierName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="selectedAmountColumn" prefWidth="137.0" text="Selected Amount">
                 </TableColumn>
                 <TableColumn fx:id="pricePerCarrierColumn" prefWidth="155.0" text="Price per carrier">
                    <cellValueFactory>
                       <PropertyValueFactory property="pricePerCarrier" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="totalProductPriceColumn" prefWidth="110.0" text="Total">
                    <cellValueFactory>
                       <PropertyValueFactory property="totalProductPrice" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="actionColumn" prefWidth="110.0" text="Action">
                 </TableColumn>
              </columns>
            </TableView>
            <Pane prefHeight="215.0" prefWidth="638.0">
               <children>
                  <Text layoutX="524.0" layoutY="51.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Price:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <Label fx:id="totalPriceLabel" layoutX="644.0" layoutY="35.0" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Button layoutX="533.0" layoutY="71.0" mnemonicParsing="false" onAction="#onCheckoutButtonClicked" text="Check out" />
                  <Button layoutX="626.0" layoutY="71.0" mnemonicParsing="false" onAction="#onClearCartButtonClicked" text="Clear cart" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</HBox>
