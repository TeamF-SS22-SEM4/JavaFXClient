<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<?import java.lang.String?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<HBox minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.controller.CustomerController">
   <children>
      <fx:include source="sidebar.fxml"/>
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" styleClass="header" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHomeButtonClicked">
                           <graphic>
                              <FontAwesomeIconView glyphName="HOME" size="20" />
                           </graphic>
                           <styleClass>
                              <String fx:value="searchbar-btn-home" />
                              <String fx:value="btn" />
                           </styleClass>
                           <HBox.margin>
                              <Insets bottom="1.0" />
                           </HBox.margin>
                        </Button>
                        <TextField fx:id="searchTextField" onAction="#onSearchButtonClicked" promptText="Search" styleClass="searchbar-textfield" />
                        <Button mnemonicParsing="false" onAction="#onSearchButtonClicked">
                           <graphic>
                              <FontAwesomeIconView glyphName="SEARCH" size="20" />
                           </graphic>
                           <styleClass>
                              <String fx:value="searchbar-btn-search" />
                              <String fx:value="btn" />
                           </styleClass>
                           <HBox.margin>
                              <Insets bottom="1.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <Pane HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <TableView fx:id="customerTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="firstNameColumn" maxWidth="-1.0" minWidth="300.0" prefWidth="-1.0" text="First Name">
                     <cellValueFactory>
                        <PropertyValueFactory property="givenName" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="lastNameColumn" maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Last Name">
                     <cellValueFactory>
                        <PropertyValueFactory property="familyName" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="streetColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Street">
                     <cellValueFactory>
                        <PropertyValueFactory property="street" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="houseNumberColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="House Number">
                     <cellValueFactory>
                        <PropertyValueFactory property="houseNumber" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="postalColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Postal Code">
                     <cellValueFactory>
                        <PropertyValueFactory property="postalCode" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="cityColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="City">
                     <cellValueFactory>
                        <PropertyValueFactory property="city" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="countryColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Country">
                     <cellValueFactory>
                        <PropertyValueFactory property="country" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="eMailColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="E-Mail">
                     <cellValueFactory>
                        <PropertyValueFactory property="email" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="phoneNumberColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Phone Number">
                     <cellValueFactory>
                        <PropertyValueFactory property="phoneNumber" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="mobileNumberColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Mobile Number">
                     <cellValueFactory>
                        <PropertyValueFactory property="mobileNumber" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="addToSaleColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Action">
                  </TableColumn>
               </columns>
            </TableView>
         </children>
      </VBox>
   </children>
</HBox>
