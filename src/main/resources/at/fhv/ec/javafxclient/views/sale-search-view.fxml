<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<HBox minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.SearchSaleController">
   <children>
      <VBox maxWidth="300.0" minWidth="200.0" styleClass="sidebar" HBox.hgrow="ALWAYS">
         <children>
            <Pane fx:id="sidebar" maxHeight="100.0" minHeight="100.0" />
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" styleClass="btn" text="Shop" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" text="Customers" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="100.0" minHeight="50.0" spacing="20.0" styleClass="header" VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="searchTextField" maxHeight="30.0" maxWidth="300.0" minHeight="30.0" minWidth="150.0" onAction="#onSearchButtonClicked" style="-fx-background-color: #ffffff;" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="30.0" maxWidth="75.0" minHeight="30.0" minWidth="50.0" mnemonicParsing="false" onAction="#onSearchButtonClicked" text="Search" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="30.0" maxWidth="75.0" minHeight="30.0" minWidth="50.0" mnemonicParsing="false" onAction="#onClearButtonClicked" text="Clear" HBox.hgrow="ALWAYS" />
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
                     <children>
                        <Button layoutX="163.0" layoutY="38.0" mnemonicParsing="false" onAction="#onBackButtonClicked" text="Back" />
                     </children></Pane>
               </children>
            </HBox>
            <Pane fx:id="contentPaneTop" prefHeight="70.0" prefWidth="599.0">
               <children>
                  <Text layoutY="27.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Invoice Number:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <Label fx:id="invoiceNumberLabel" layoutX="157.0" layoutY="10.0" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
               </children>
            </Pane>
            <TableView fx:id="saleItemsTable" prefHeight="221.0" prefWidth="599.0">
              <columns>
                 <TableColumn fx:id="productNameColumn" prefWidth="96.0" text="Product">
                    <cellValueFactory>
                       <PropertyValueFactory property="productName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="artistNameColumn" prefWidth="96.0" text="Artist">
                    <cellValueFactory>
                       <PropertyValueFactory property="artistName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="soundCarrierNameColumn" prefWidth="115.0" text="Sound Carrier">
                    <cellValueFactory>
                       <PropertyValueFactory property="soundCarrierName" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="amountOfCarriersColumn" prefWidth="77.0" text="Amount">
                    <cellValueFactory>
                       <PropertyValueFactory property="amountOfCarriers" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="pricePerCarrierColumn" prefWidth="132.0" text="Price per carrier">
                    <cellValueFactory>
                       <PropertyValueFactory property="pricePerCarrier" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="refundedAmountColumn" prefWidth="132.0" text="Already refunded">
                    <cellValueFactory>
                       <PropertyValueFactory property="refundedAmount" />
                    </cellValueFactory>
                 </TableColumn>
                 <TableColumn fx:id="refundCarrierColumn" prefWidth="78.0" text="Refund">
                 </TableColumn>
              </columns>
            </TableView>
            <Pane fx:id="contentPaneBottom" prefHeight="209.0" prefWidth="599.0">
               <children>
                  <Text layoutX="405.0" layoutY="54.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Price:">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <Label fx:id="totalPriceLabel" layoutX="515.0" layoutY="37.0" text="Label">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <Button onAction="#onRefundButtonClicked" styleClass="button" layoutX="405.0" layoutY="66.0" mnemonicParsing="false" text="Refund" />
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
</HBox>
