                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="30.0" minHeight="30.0" mnemonicParsing="false" text="Cart">
                     <HBox.margin>
                        <Insets left="50.0" right="50.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TreeTableView VBox.vgrow="ALWAYS" fx:id="productTable">
            </TreeTableView>
         </children>
      </VBox>
   </children>
</HBox>
