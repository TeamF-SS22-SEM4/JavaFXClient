<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.SearchController">
   <children>
      <VBox maxWidth="300.0" minWidth="200.0" styleClass="sidebar" HBox.hgrow="ALWAYS">
         <children>
            <Pane fx:id="sidebar" maxHeight="100.0" minHeight="100.0" />
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" styleClass="btn" text="Shop" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </VBox.margin>
            </Button>
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" text="Customers" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
            <Button maxHeight="40.0" maxWidth="1.7976931348623157E308" minHeight="40.0" mnemonicParsing="false" text="Exchange">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" maxHeight="100.0" minHeight="50.0" spacing="20.0" styleClass="header" VBox.vgrow="ALWAYS">
               <children>
                  <TextField fx:id="searchTextField" maxHeight="30.0" maxWidth="300.0" minHeight="30.0" minWidth="150.0" onAction="#onEnter" style="-fx-background-color: #ffffff;" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="30.0" maxWidth="75.0" minHeight="30.0" minWidth="50.0" mnemonicParsing="false" onAction="#onSearchButtonClicked" text="Search" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="30.0" maxWidth="75.0" minHeight="30.0" minWidth="50.0" mnemonicParsing="false" onAction="#onClearButtonClicked" text="Clear" HBox.hgrow="ALWAYS" />
                  <Pane prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Button maxHeight="30.0" minHeight="30.0" mnemonicParsing="false" onAction="#onShoppingCartButtonClicked" text="Shopping Cart" />
               </children>
            </HBox>
            <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="nameColumn" maxWidth="-1.0" minWidth="300.0" prefWidth="-1.0" text="Product">
                     <cellValueFactory>
                        <PropertyValueFactory property="name" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="artistColumn" maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Artist">
                     <cellValueFactory>
                        <PropertyValueFactory property="artistName" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="releaseYearColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Release Year">
                     <cellValueFactory>
                        <PropertyValueFactory property="releaseYear" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="actionColumn" maxWidth="-1.0" minWidth="100.0" prefWidth="-1.0" text="Action">
                  </TableColumn>
               </columns>

            </TableView>
         </children>
      </VBox>
   </children>
</HBox>
