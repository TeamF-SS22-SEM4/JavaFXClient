<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="ct" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="at.fhv.ec.javafxclient.view.controller.ShopController">
   <children>
      <fx:include source="sidebar.fxml" />
      <VBox minWidth="400.0" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER_LEFT" styleClass="header" VBox.vgrow="ALWAYS">
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <Button alignment="CENTER" mnemonicParsing="false" onAction="#onHomeButtonClicked">
                           <graphic>
                              <FontAwesomeIconView glyphName="HOME" size="20" />
                           </graphic>
                           <styleClass>
                              <String fx:value="searchbar-btn-home" />
                              <String fx:value="btn" />
                           </styleClass>
                           <HBox.margin>
                              <Insets bottom="1.0" />
                           </HBox.margin>
                        </Button>
                        <TextField fx:id="searchTextField" onAction="#onSearchButtonClicked" styleClass="searchbar-textfield" />
                        <Button mnemonicParsing="false" onAction="#onSearchButtonClicked">
                           <graphic>
                              <FontAwesomeIconView glyphName="SEARCH" size="20" />
                           </graphic>
                           <styleClass>
                              <String fx:value="searchbar-btn-search" />
                              <String fx:value="btn" />
                           </styleClass>
                           <HBox.margin>
                              <Insets bottom="1.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <Pane HBox.hgrow="ALWAYS" />
                  <Button graphicTextGap="10.0" mnemonicParsing="false" onAction="#onShoppingCartButtonClicked" styleClass="btn" text="Shopping Cart">
                     <graphic>
                        <FontAwesomeIconView glyphName="SHOPPING_CART" size="20" />
                     </graphic></Button>
               </children>
            </HBox>
            <VBox styleClass="content" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="productTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="nameColumn" minWidth="200.0" prefWidth="200.0" text="Album">
                           <cellValueFactory>
                              <PropertyValueFactory property="name" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="artistColumn" minWidth="100.0" prefWidth="100.0" text="Artist">
                           <cellValueFactory>
                              <PropertyValueFactory property="artistName" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="100.0" prefWidth="100.0" text="Genre">
                           <cellValueFactory>
                              <PropertyValueFactory property="releaseYear" />
                           </cellValueFactory>
                     </TableColumn>
                     <TableColumn fx:id="releaseYearColumn" minWidth="100.0" prefWidth="100.0" style="-fx-alignment: center;" text="Release">
                           <cellValueFactory>
                              <PropertyValueFactory property="releaseYear" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn minWidth="100.0" prefWidth="100.0" text="Price" />
                        <TableColumn fx:id="detailsColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" style="-fx-alignment: center;" />
                        <TableColumn fx:id="addToCartColumn" maxWidth="100.0" minWidth="100.0" prefWidth="100.0" style="-fx-alignment: center;" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </children>
</HBox>
